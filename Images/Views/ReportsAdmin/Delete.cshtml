@model Images.Report

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
}

<head>
    <title>Delete</title>
    <link href="~/Content/css-Register/style1.css" rel="stylesheet" />
    <link href="~/Content/css-Register/styleRe.css" rel="stylesheet" />
    <link href="//fonts.googleapis.com/css?family=Noto+Sans:400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,devanagari,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
</head>

<body>

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    </div>

    <div class="w3ls-header">
        <br />
        <br />
        <div class="header-main">
            <h2>Delete</h2>
            <div class="header-bottom">
                <div class="header-right w3agile">
                    <div class="header-left-bottom agileinfo">
                        <form action="#" method="post">
                            <div>
                                <hr />
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.Label("ผู้ส่ง", new { @class = "col-md-2 control-label" }) : @Html.DisplayFor(model => model.sender_email)
                                    </dt>


                                    <dt>
                                        @Html.Label("ผู้รับ", new { @class = "col-md-2 control-label" }) : @Html.DisplayFor(model => model.receiver_email)
                                    </dt>

                                    <dt>
                                        @Html.Label("รูปภาพ", new { @class = "col-md-2 control-label" }) : @Html.DisplayFor(model => model.pic_url)
                                    </dt>


                                    <dt>
                                        @Html.Label("ข้อความ", new { @class = "col-md-2 control-label" }) : @Html.DisplayFor(model => model.message)
                                    </dt>


                                </dl>

                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Delete" class="btn btn-default" /> |
                                        @Html.ActionLink("Back to List", "Index")
                                    </div>
                                }
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>}
</body>