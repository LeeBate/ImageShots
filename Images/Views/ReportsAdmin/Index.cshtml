@model IEnumerable<Images.Report>

@{
    ViewBag.Title = "ReportsAdmin";
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
}
<center>
    <h2>ReportsAdmin</h2>
</center>
@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<div style="padding-left: 10%; padding-right: 10%; padding-top: 5%;justify-content:center">
    <table class="table table-striped" style="align-content:center" >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sender_email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.receiver_email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.pic_url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.message)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sender_email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.receiver_email)
                </td>
                <td>
                    @*  @Html.DisplayFor(modelItem => item.pic_url)*@
                    <img src=@Url.Content("~/Content/images/"+(item.pic_url)) style="width: 100px;height: auto," />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.message)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-large" })
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-large" })
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id, @class = "btn btn-danger" }, new { @class = "btn btn-danger btn-large" })
                </td>
            </tr>
        }

    </table>
</div>