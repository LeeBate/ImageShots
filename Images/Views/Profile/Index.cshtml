@model IEnumerable<Images.AspNetUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
}




@foreach (var item in Model)
{

<center>

    <div>
        <img style="border-width:4px;border-radius:100%;margin:20px;max-width:200px;height:auto" src=@Url.Content("~/Content/images/Profile/"+(item.LastName)) />

        <h4 class="name"> @Html.DisplayFor(modelItem => item.FirstName)</h4>

        <p class="info"> @Html.DisplayFor(modelItem => item.Email)</p><br />

        @Html.ActionLink("Edit", "Edit", new { id = item.Id, @class = "btn btn-success" })
    </div>


</center>






    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            <img src=@Url.Content("~/Content/images/Profile/"+(item.LastName)) style="width: 100px;height: auto" />
            @*  @Html.DisplayFor(modelItem => item.LastName)*@
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
        </td>
    </tr>
}


