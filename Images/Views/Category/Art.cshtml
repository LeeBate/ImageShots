
@{
    ViewBag.Title = "Art";
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
}
@model IEnumerable<Images.Picture>
<!-- Header-->
<!-- Header   Searching-->
<header>
    <div class="hero-image">
        <div class="text-center text-white">
            <br />
            <br />
            <br />
            <br />
            <div class="input-group">
                <input type="search" class="form-control rounded" placeholder="ค้นหาภาพถ่ายตามความต้องการของคุณ" aria-label="Search"
                       aria-describedby="search-addon" />
                <button type="button" class="btn btn btn-dark">ค้นหา</button>
            </div>
            <h1 class="hero-text">
                รวมรูปภาพสวยๆพร้อมให้คุณดาวน์โหลด

            </h1>
            <p class="hero-text2">ปลดปล่อยพลังสร้างสรรค์ของคุณ</p>
        </div>
    </div>
</header>


<div class="container my-4">
    <div class="row">


        @for (var i = 1; i <= Model.ToList().Count(); i++)
        {
            var indexItem = i - 1;
            if (i == 1 || i % 4 == 1)
            {
                @:
            }
            <!--Grid column-->
            <div class="col-lg-3 col-md-4 mb-2">

                <a style="cursor: pointer;" onclick="location.href = '@Url.Action("Details","Home", new {id = @Model.ElementAt(indexItem).Pic_ID })'">

                    <img style="min-width:300px;max-height:500px;width:auto;min-height:250px" src="@Url.Content("~/Content/images/" + (Model.ElementAt(indexItem).url))" class="img-fluid mb-4" alt=""
                         data-wow-delay="0.3s">
                </a>
            </div>
            <!--Grid column-->
            <!--Grid column-->

            if (i % 4 == 0)
            {
                @:
            }
        }
    </div>
</div>