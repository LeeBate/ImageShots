                    </div>
                </div>
            </div>

            <div class="col mb-5">
                <div class="card h-100">
                    <img class="card-img-top" src="@Url.Content("~/Content/images/tt.jpg")" onclick="location.href = '@Url.Action("Tech","Category")'" />
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
