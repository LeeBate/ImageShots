                </div>
            </div>


        </div>
    </div>
</section>


<hr class="mb-2" />
<!--Grid row-->
<div class="container my-4">
    <div class="row">


        @for (var i = 1; i <= Model.ToList().Count(); i++)
        {
            var indexItem = i - 1;
            if (i == 1 || i % 4 == 1)
            {
                @:
            }
            <!--Grid column-->
            <div class="col-lg-3 col-md-4 mb-2">

                <a style="cursor: pointer;" onclick="location.href = '@Url.Action("Details","Home", new {id = @Model.ElementAt(indexItem).Pic_ID })'">

                    <img style="min-width:300px;max-height:500px;width:auto;min-height:250px" src="@Url.Content("~/Content/images/" + (Model.ElementAt(indexItem).url))" class="img-fluid mb-4" alt=""
                         data-wow-delay="0.3s">
                </a>
            </div>
            <!--Grid column-->
            <!--Grid column-->

            if (i % 4 == 0)
            {
                @:
            }
        }
    </div>
</div>