
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAll.cshtml";
}

@model IEnumerable<Images.Picture>

<!-- Header   Searching-->
<header>


    <div class="hero-image">

        <div class="text-center text-white">
            <br />
            <br />
            <br />
            <br />

            @using (Html.BeginForm("Search", "Home", FormMethod.Post))
            {
                <div class="input-group">

                    @Html.TextBox("searchString", null, new { @class = "form-control", @placeholder = "ค้นหาภาพถ่ายตามความต้องการของคุณ" })
                    <button type="submit" class="btn btn btn-dark">ค้นหา</button>
                </div>
            }
            <h1 class="hero-text">
                รวมรูปภาพสวยๆพร้อมให้คุณดาวน์โหลด

            </h1>
            <p class="hero-text2">ปลดปล่อยพลังสร้างสรรค์ของคุณ</p>
        </div>
    </div>
    <script>
        $(".img-fluid").addClass("wow fadeIn z-depth-1-half");

        new WOW().init();
    </script>
</header>

<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-1 mt-5">
        <div class="hero-text3">
            หมวดหมู่ต่างๆ
