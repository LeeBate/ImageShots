                        <div class="text-center">
                            <!-- Product name-->
                            <h5 onclick="location.href = '@Url.Action("Animal","Category")'">สัตว์</h5>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col mb-5">
                <div class="card h-100">
                    <!-- Product image-->
                    <img class="card-img-top" src="@Url.Content("~/Content/images/f.jpg")" onclick="location.href = '@Url.Action("Science","Category")'" />
                    <!-- Product details-->
                    <div class="card-body p-4">
                        <div class="text-center">
                            <!-- Product name-->
